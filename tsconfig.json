{
  "compilerOptions": {
    /* === Ścieżki i foldery === */
    "rootDir": "./src",
    "outDir": "./dist",

    /* === Ustawienia środowiska Node === */
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "types": ["node"],

    /* === Kompatybilność i importy === */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,

    /* === Typowanie i bezpieczeństwo === */
    "strict": true,
    "noImplicitAny": false,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* === Mapy i deklaracje === */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* === Optymalizacja kompilacji === */
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
